{
  "name": "Simbify Pivotal Tracker",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Color code specific labels in Pivotal Tracker",
  "icons": {
    "16": "icons/icon16.png",
    "19": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "page_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "page action demo",
    "default_popup": "src/page_action/page_action.html"
  },
  "content_scripts": [{
    "matches": ["https://www.pivotaltracker.com/*"],
    "js": ["./js/jquery-3.1.1.min.js", "./js/worker.js", "js/jquery.js","js/matchLabels.js"],
    "css": ["./css/main.css", "css/styles.css"]
    }],
  "permissions": [
    "https://www.pivotaltracker.com/*", "tabs"
  ],
  "web_accessible_resources": ["images/*"]
}
